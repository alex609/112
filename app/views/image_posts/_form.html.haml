= form_for @image_post do |f|
  =f.hidden_field :news_post_id
  - if @image_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image_post.errors.count, "error")} prohibited this image_post from being saved:"
      %ul
        - @image_post.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    =f.label :image
    =f.file_field :image

  .btn-toolbar
    = f.submit 'Готово', class: 'btn btn-primary'
    %br
