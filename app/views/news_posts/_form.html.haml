= form_for @news_post do |f|
  =error_messages_for(@news_post)

  %br
  %br
  .row
    .col-md-4
      .form-group
        =f.label :title
        =f.text_field :title, class: 'form-control'
  .row
    .col-md-9
      .form-group
        =f.label :post_text
        =f.text_area :post_text, rows: 4, class: 'form-control'
  %br


  %br
  .actions
    = f.submit nil, class: 'btn btn-primary'
